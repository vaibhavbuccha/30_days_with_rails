<!-- Content Header (Page header) -->
   <div class="content-header">
     <div class="container-fluid">
       <div class="row mb-2">
         <div class="col-sm-6">
           <h1 class="m-0 text-dark">Create New Post</h1>
         </div><!-- /.col -->
         <div class="col-sm-6">
           <ol class="breadcrumb float-sm-right">
             <li class="breadcrumb-item"><a href="<%= root_path %>">Home</a></li>
             <li class="breadcrumb-item"><a href="<%= all_post_path %>">Post</a></li>
             <li class="breadcrumb-item active">Create New Post</li>
           </ol>
         </div><!-- /.col -->
       </div><!-- /.row -->
     </div><!-- /.container-fluid -->
   </div>
   <!-- /.content-header -->

   <section class="content">
     <div class="container-fluid">
       <!-- Info boxes -->
       <div class="row">
         <div class="col-12 col-sm-12 col-md-12">
           <div class="info-box">
          <%= form_for @post , :method => "post" , validate:true do |f|  %>
              <%= f.hidden_field :user_id, :value => current_user.id %>
              <div class="form-group">
                <%= f.label :title  %>
                <%= f.text_field :title,:class=>"form-control"  %>
              </div>
              <div class="form-group">
                <%= f.label :content %>
                <%= f.text_area :content ,:class => "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :post_image %>
                <%= f.file_field :post_images, :class=>"form-control",:multiple => true %>
              </div>
              <div class="form-group">
                <%= f.submit "Create" ,:class => "btn btn-primary" %>
                <%= link_to "Back", all_post_path ,:class => "btn btn-default" %>
              </div>
          <% end %>
        </div>
      </div>
       <!-- /.col -->
      </div>
      <!-- /.row -->
    </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->
