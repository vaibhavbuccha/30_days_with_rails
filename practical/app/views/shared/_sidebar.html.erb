
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="#" class="brand-link">
      <!-- <img src="admin.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
           style="opacity: .8"> -->
           <%= image_tag("admin.png" , :alt=>"AdminLTE Logo" , :class=>"brand-image img-circle elevation-3" , :style=>"opacity: .8")  %>
      <span class="brand-text font-weight-light">Admin</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <!-- <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image"> -->
          <% if current_user.image.attached? %>
              <%= image_tag(current_user.image ,:class => "img-circle elevation-2", :width => "128px" ,:height => "128px"  ) %>
          <% else %>
              <%= image_tag('no_user.png' ,:class => "img-circle elevation-2" , :width => "128px" ,:height => "128px" ) %>
          <% end %>
        </div>
        <div class="info">
          <a href="#" class="d-block"><%= current_user.first_name+' '+current_user.last_name %></a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->

          <li class="nav-item">
            <a href="<%= root_path %>" class="nav-link <%=  'active' if controller.controller_name == 'dashboard'  %> ">
              <i class="nav-icon fa fa-th"></i>
              <p>
                Dashboard
                <!-- <span class="right badge badge-danger">New</span> -->
              </p>
            </a>
          </li>




        <li class="nav-item has-treeview">
          <a href="#" class="nav-link  <%= 'active' if controller.controller_name == 'posts' %> ">
              <i class="nav-icon fa fa-edit"></i>
              <p>
                Posts
                <i class="fa fa-angle-left right"></i>
              </p>
            </a>
             <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="<%= all_post_path %>" class="nav-link  <%= 'active' if controller.controller_name == 'posts' && controller.action_name == 'index'     %> ">
                  <i class="nav-icon fa fa-image"></i>
                  <p>
                    All Posts
                  </p>
                </a>
              </li>
              <li class="nav-item">
                <a href="<%= posts_path(current_user.id) %>" class="nav-link  <%= 'active' if controller.controller_name == 'posts' && controller.action_name == 'show'     %> ">
                  <i class="nav-icon fa fa-image"></i>
                  <p>
                    My Post
                  </p>
                </a>
              </li>
            </ul>
            </li>


        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>
