 <!DOCTYPE html>
<html>
  <head>
    <% title = '' %>
    <% title = 'Dashboard' if controller.controller_name == 'dashboard' %>
    <% title = 'Posts' if controller.controller_name == 'posts' %>
    <% title = 'Profile' if controller.controller_name == 'profiles' %>

    <title><%= '::'+title+'::' %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body  class="hold-transition sidebar-mini" >
    <!-- loader--  -->


    <div class="wrapper">
      <div class="loader" >
          <%= image_tag "loader.gif" ,class: "loader-img" %>
      </div>
      <!-- navbar -->
       <%= render "layouts/header" %>
       <!-- nav -->

  <!-- Sidebar -->
       <%= render "shared/sidebar" %>


       <div class="content-wrapper">
         <% flash.each do |type,message| %>
             <% if type == 'notice' || type == 'alert' %>
               <div class="alert alert-info" role="alert"><%= message %></div>
              <%else%>
                <div class="alert alert-<%= type %>" role="alert" ><%= message %></div>
              <%end%>
           <%end%>
           <%= yield %>
        </div>
        <aside class="control-sidebar control-sidebar-dark">
           <!-- Control sidebar content goes here -->
         </aside>
         <!-- /.control-sidebar -->

         <!-- Main Footer -->
         <footer class="main-footer">
           <strong>Copyright &copy; 2014-2019 <a href="http://adminlte.io/">AdminLTE.io</a>.</strong>
           All rights reserved.
           <div class="float-right d-none d-sm-inline-block">
             <b>Version</b> 3.0.0
           </div>
         </footer>
        </div>
           <%= render "layouts/footer" %>
      </body>
</html>
