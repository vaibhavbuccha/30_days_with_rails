<div>
    <h3>
      Fix Profile
    </h3>
    <hr>
    <table class=" table table-bordered" >
      <%= form_for( @user,:url => users_path(@user) , :method => "patch") do |f| %>
        <tr>
          <th><%= f.label :first_name %></th>
          <td>
              <%= f.text_field :first_name , :class => "form-control" ,:required => true %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :last_name %></th>
          <td>
              <%= f.text_field :last_name , :class => "form-control" ,:required => true %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :email %></th>
          <td>
              <%= f.email_field :email , :class => "form-control" ,:required => true , :readonly => true  %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :image %></th>
          <td>
            <%= f.file_field :image , :class => "form-control"    %>
          </td>
        </tr>
        <tr>
          <td colspan="2" >
              <%= f.submit "Update",:class => "btn btn-primary" %>
              <%= link_to "Cancel", users_path(@user.id), :class => "btn btn-danger" %>
          </td>
        </tr>
        <%end%>
    </table>
</div>
