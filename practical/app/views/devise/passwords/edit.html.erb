
<div class="row" >
    <div class="col-sm-3"></div>
    <div class="col-sm-6 card login-box mb-5"  style="padding: 20px;">
        <h3 class="text-center" >Change your password!</h3>
        <hr>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group row">
    <%= f.label :password, "New password " %><br />
    <% if @minimum_password_length %>
      <small><em>(<%= @minimum_password_length %> characters minimum)</em></small><br />
    <% end %>
    <div class="col-sm-12">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",:class=>"form-control" ,:placeholder=>"New password" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, "Confirm new password" ,:class => "col-sm-6 col-form-label" %><br />
      <div class="col-sm-12">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",:class=>"form-control" ,:placeholder=>"Confirm new password" %>
      </div>
  </div>
  <div class="form-group row">
      <div class="col-sm-2">
    <%= f.submit "Change my password", :class=>"btn btn-default" %>
    </div>
    <div class="col-sm-8"></div>
    <div class="col-sm-2">
<% end %>

      <%= render "devise/shared/links" %>
      </div>
      </div>
      <div class="col-sm-3"></div>
</div>
