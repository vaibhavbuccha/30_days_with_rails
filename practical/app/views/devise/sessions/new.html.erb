<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6 card mb-5" style="padding: 20px;">
    <h3 class="text-center">
        Login Here!
    </h3>
    <hr>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
        <%= f.label :email , :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>"form-control",data:{ validation:"required" } %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password , :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "current-password",:class=>"form-control",data:{ validation:"required" } %>
        </div>
      </div>
      <div class="form-group row">
        <% if devise_mapping.rememberable? %>
          <div class="field" style="width:300px;">
            <%= f.check_box :remember_me , :class => "col-sm-1" %>
            <%= f.label :remember_me , :class => "col-sm-10 col-form-label" %>
          </div>
        <% end %>
      </div>
      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.submit "Log in",:class=>"btn btn-primary" %>
        </div>
      </div>
      <div class="row">
          <div class="col-sm-12 text-center">
              <%= render "devise/shared/links" %>
          </div>
      </div>
      <% end %>
  </div>
  <div class="col-sm-3"></div>
</div>
